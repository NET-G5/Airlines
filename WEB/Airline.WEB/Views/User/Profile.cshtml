                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>
                </dl>
                <a href="@Url.Action("Edit", "User", new { id = Model.ID })" class="btn btn-primary">Edit Profile</a>
            </div>
        </div>
    </div>
