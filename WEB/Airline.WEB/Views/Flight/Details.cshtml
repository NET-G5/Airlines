@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AirlineWeb.ViewModels.Flight.FlightView

@{
ViewData["Title"] = "Flight Details";
}

<!-- Background Section -->
<div class="container mt-5">
    <h1 class="text-center mb-4">Flight Details</h1>

    <!-- Flight Details -->
    <div class="card">
        <div class="card-header">
            <h3>@Model.DepartureAirport - @Model.ArrivalAirport</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Departure Airport</dt>
                <dd class="col-sm-9">@Model.DepartureAirport</dd>

                <dt class="col-sm-3">Arrival Airport</dt>
                <dd class="col-sm-9">@Model.ArrivalAirport</dd>

                <dt class="col-sm-3">Departure Time</dt>
                <dd class="col-sm-9">@Model.DepartureTime.ToString("dd MMM yyyy HH:mm")</dd>

                <dt class="col-sm-3">Arrival Time</dt>
                <dd class="col-sm-9">@Model.ArrivalTime.ToString("dd MMM yyyy HH:mm")</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
           <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>
    </div>
</div>
