@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AirlineWeb.ViewModels.Flight.FlightView

@{
    ViewData["Title"] = "Flight Details";
}

<!-- Background Section -->
<div class="row justify-content-center">
    <div class="col-md-8">
        <!-- Card with shadow for a modern look -->
        <div class="card shadow-lg border-0" style="border-radius: 12px; width: 100%; max-width: 800px;">
            <div class="card-header bg-primary text-white text-center" style="background-color: #605DEC !important; border-radius: 15px 15px 0 0;">
                <h2 class="mb-0" style="background: #605DEC">Flight Details</h2>
            </div>
            <div class="card-body p-4">
                <dl class="row mb-4">
                    <dt class="col-sm-4 font-weight-bold">Departure Airport:</dt>
                    <dd class="col-sm-8">@Model.DepartureAirportCountry<br>@Model.DepartureAirportCity</dd>

                    <dt class="col-sm-4 font-weight-bold">Arrival Airport:</dt>
                    <dd class="col-sm-8">@Model.ArrivalAirportCountry<br>@Model.ArrivalAirportCity</dd>

                    <dt class="col-sm-4 font-weight-bold">Departure Time:</dt>
                    <dd class="col-sm-8">@Model.DepartureTime.ToString("dd MMM yyyy HH:mm")</dd>

                    <dt class="col-sm-4 font-weight-bold">Arrival Time:</dt>
                    <dd class="col-sm-8">@Model.ArrivalTime.ToString("dd MMM yyyy HH:mm")</dd>

                    <dt class="col-sm-4 font-weight-bold">Price:</dt>
                    <dd class="col-sm-8">@Model.Price.ToString("C")</dd>
                </dl>
            </div>
            <div class="card-footer text-center bg-light" style="border-radius: 0 0 15px 15px;">
                <form asp-action="Buy" method="post" style="display: inline-block;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="userId" value="1" />
                    <input type="hidden" name="flightId" value="@Model.ID" />
                    <button type="submit" class="btn btn-secondary btn-lg" style="background-color: #605DEC; width: 130px; height: 50px;">
                        Buy
                    </button>
                </form>
                <a class="btn btn-secondary btn-lg" style="background-color: #1c1f23; width: 130px; height: 50px; display: inline-block;"
                   asp-controller="Flight"
                   asp-action="Index">
                    Cancel
                </a>
            </div>
        </div>
    </div>
</div>
