@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<AirlineWeb.ViewModels.Flight.FlightView>

@{
ViewData["Title"] = "Flight";
}

<!-- Background Section -->
<div class="search-section bg-purple text-white py-1">
    <!-- Main Heading -->
    <div class="text-center mt-5" style="color: #000;">
        <h1 class="display-4 font-weight-bold">Find Your Perfect Flight</h1>
        <p class="lead">Search for flights and book your next trip easily.</p>
    </div>


    <!-- Search Form -->
    <div class="mt-5">
        <form method="get" asp-action="Index" class="row g-3 justify-content-center">
            <div class="col-md-3 position-relative">
                <i class="fa-solid fa-plane-departure position-absolute top-50 start-0 translate-middle-y ms-4" style="color: #6f42c1;"></i>
                <input type="text" class="form-control ps-5" id="fromWhere" name="where" value="@ViewBag.where" placeholder="From where?" aria-label="Departure location">
            </div>
            <div class="col-md-3 position-relative">
                <i class="fa-solid fa-plane-arrival position-absolute top-50 start-0 translate-middle-y ms-4" style="color: #6f42c1;"></i>
                <input type="text" class="form-control ps-5" id="toWhere" name="to" value="@ViewBag.to" placeholder="Where to?" aria-label="Destination location">
            </div>
            <div class="col-md-3 position-relative">
                <i class="fa-solid fa-calendar-days position-absolute top-50 start-0 translate-middle-y ms-4" style="color: #6f42c1; background-color: white;"></i>
                <input type="text" class="form-control ps-5" id="departureReturn" name="departure" value="@ViewBag.departure" placeholder="Depart - Return" aria-label="Departure and return dates">
            </div>
            <div class="col-md-2 position-relative">
                <i class="fa-solid fa-user position-absolute top-50 start-0 translate-middle-y ms-4" style="color: #6f42c1;"></i>
                <input type="number" class="form-control" id="numberOfAdults" name="numberOfAdults" value="@ViewBag.numberOfAdults" min="1" max="10" aria-label="Number of adults">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-light w-100" style="background: #605DEC; color: white">Search</button>
            </div>
        </form>
    </div>
</div>

<!-- Flight List Section -->
<div class="container mt-5">
    <h2 class="text-center mb-4">Available Flights</h2>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="bg-purple text-black">
            <tr>
                <th>Departure Airport</th>
                <th>Arrival Airport</th>
                <th>Departure Time</th>
                <th>Arrival Time</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var flight in Model)
            {
            <tr>
                <td>@flight.DepartureAirportCountry<br>@flight.DepartureAirportCity</td>
                <td>@flight.ArrivalAirportCountry<br>@flight.ArrivalAirportCity</td>
                <td>@flight.DepartureTime.ToString("dd MMM yyyy")</td>
                <td>@flight.ArrivalTime.ToString("dd MMM yyyy")</td>
                <td>@flight.Price.ToString("C")</td>
                <td>
                    <a class="fa-solid fa-info icon-large" asp-action="Details" asp-route-id="@flight.ID"></a>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>
</div>
