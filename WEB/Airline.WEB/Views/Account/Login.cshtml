@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AirlineWeb.ViewModels.Account.LoginViewModel

@{
ViewData["PageTitle"] = "Login";
Layout = $"~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="widget p-5" style="background-color:#212b36">
            <h2 class="text-center mb-5">Login</h2>
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label text-light">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-light">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label text-light">Remember me</label>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>
            </form>
            <div class="mt-3 text-center">
                <a asp-action="ForgotPassword" class="text-info">Forgot Password?</a>
            </div>
            <div class="mt-3 text-center">
                <span class="text-light">Don't have an account? </span>
                <a asp-action="Register" class="text-info">Register</a>
            </div>
        </div>
    </div>
</div>
