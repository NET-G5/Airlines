@model AirlineWeb.ViewModels.Booking.CreateBookingView

<h2>Create New Booking</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FlightID" class="control-label"></label>
        <input asp-for="FlightID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BookingDate" class="control-label"></label>
        <input asp-for="BookingDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SeatNumber" class="control-label"></label>
        <input asp-for="SeatNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TotalPrice" class="control-label"></label>
        <input asp-for="TotalPrice" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
