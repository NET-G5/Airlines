@model AirlineWeb.ViewModels.Booking.BookingView

<h2>Your Bookings</h2>

<table class="table">
    <thead>
    <tr>
        <th>Booking Date</th>
        <th>Seat Number</th>
        <th>Total Price</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
            <td>@Model.BookingDate.ToShortDateString()</td>
            <td>@Model.SeatNumber</td>
            <td>@Model.TotalPrice.ToString("C")</td>
            <td>
                <a asp-action="Details" asp-route-id="@Model.ID" class="btn btn-info">Details</a>
                <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger">Delete</a>
            </td>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Booking</a>