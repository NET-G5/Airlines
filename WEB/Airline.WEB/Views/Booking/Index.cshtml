@model IEnumerable<AirlineWeb.ViewModels.Booking.BookingView>

<h2 class="text-center my-4">Your Bookings</h2>

<div class="table-responsive shadow-lg border-0" style="border-radius: 12px">
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table text-center" style="color: white; background-color: #605DEC">
        <tr>
            <th>Booking Date</th>
            <th>Seat Number</th>
            <th>Total Price</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var booking in Model)
        {
        <tr class="text-center">
            <td>@booking.BookingDate.ToString("dd MMM yyyy HH:mm")</td>
            <td>@booking.SeatNumber</td>
            <td>@booking.TotalPrice.ToString("C")</td>
            <td>
                <!-- Вы можете добавить действия для каждого бронирования -->
                <a asp-action="Delete" asp-route-id="@booking.ID" class="btn btn-sm mx-1" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete Booking">
                    <i class="fa-solid fa-trash" style="color: #dc3545;"></i> <!-- Цвет иконки -->
                </a>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>

<div class="text-center my-4">
    <a asp-action="Index" asp-controller="Flight" class="btn btn-success btn-lg">
        <i class="fa-solid fa-plus me-2"></i> New Booking
    </a>
</div>

<script>
    // Инициализация всплывающих подсказок для иконок
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
    });
</script>
