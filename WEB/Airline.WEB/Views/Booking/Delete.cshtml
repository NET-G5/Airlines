@model AirlineWeb.ViewModels.Booking.BookingView

<h2>Delete Booking</h2>

<h3>Are you sure you want to delete this booking?</h3>
<div>
    <h4>Flight Number: @Model.FlightID</h4>
    <p>Booking Date: @Model.BookingDate.ToShortDateString()</p>
    <p>Seat Number: @Model.SeatNumber</p>
    <p>Total Price: @Model.TotalPrice.ToString("C")</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
