@model AirlineWeb.ViewModels.Booking.BookingView

<h2 class="text-center my-4">Delete Booking</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h3 class="text-center mb-4">Are you sure you want to delete this booking?</h3>
            <div class="card p-4 shadow-lg border-0" style="border-radius: 12px; width: 100%; max-width: 800px;">
                <div class="card-body">
                    <p><strong>Booking Date:</strong> @Model.BookingDate.ToString("dd MMM yyyy HH:mm")</p>
                    <p><strong>Seat Number:</strong> @Model.SeatNumber</p>
                    <p><strong>Total Price:</strong> @Model.TotalPrice.ToString("C")</p>
                </div>
            </div>
            <form asp-controller="Booking" asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="ID" />
                <div class="text-center" style="font-size: medium">
                    <button type="submit" class="btn btn-danger btn-lg mx-1">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg mx-1" style="background-color: #1c1f23">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>